<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD de Veículos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .actions-column {
      white-space: nowrap;
      width: 1%;
    }
    .table-responsive {
      overflow-x: auto;
    }
    @media (max-width: 768px) {
      .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
      }
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-4">Veículos</h1>
    
    <a href="/create" class="btn btn-primary mb-3">Novo Veículo</a>
    
    <% if (vehicles && vehicles.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Placa</th>
              <th>Chassi</th>
              <th>Renavam</th>
              <th>Modelo</th>
              <th>Marca</th>
              <th>Ano</th>
              <th class="actions-column">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% vehicles.forEach(vehicle => { %>
              <tr>
                <td><%= vehicle.id %></td>
                <td><%= vehicle.placa %></td>
                <td><%= vehicle.chassi %></td>
                <td><%= vehicle.renavam %></td>
                <td><%= vehicle.modelo %></td>
                <td><%= vehicle.marca %></td>
                <td><%= vehicle.ano %></td>
                <td class="actions-column">
                  <div class="btn-group" role="group">
                    <a href="/edit/<%= vehicle.id %>" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/delete/<%= vehicle.id %>" method="post" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este veículo?')">Excluir</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">Nenhum veículo cadastrado.</div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>