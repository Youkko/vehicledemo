<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD de Veículos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .actions-column { white-space: nowrap; width: 1%; }
    .table-responsive { overflow-x: auto; }
    #loading-spinner { display: none; }
    @media (max-width: 768px) {
      .btn-sm { padding: 0.25rem 0.5rem; font-size: 0.75rem; }
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Veículos</h1>
      <div>
        <span id="loading-spinner" class="spinner-border spinner-border-sm text-primary me-2" role="status"></span>
        <span id="last-update" class="text-muted small"></span>
      </div>
    </div>
    
    <a href="/create" class="btn btn-primary mb-3">Novo Veículo</a>
    
    <div id="vehicles-container">
      <% if (vehicles && vehicles.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Placa</th>
                <th>Chassi</th>
                <th>Renavam</th>
                <th>Modelo</th>
                <th>Marca</th>
                <th>Ano</th>
                <th class="actions-column">Ações</th>
              </tr>
            </thead>
            <tbody id="vehicles-tbody">
              <% vehicles.forEach(vehicle => { %>
                <tr data-vehicle-id="<%= vehicle.id %>">
                  <td><%= vehicle.id %></td>
                  <td><%= vehicle.placa %></td>
                  <td><%= vehicle.chassi %></td>
                  <td><%= vehicle.renavam %></td>
                  <td><%= vehicle.modelo %></td>
                  <td><%= vehicle.marca %></td>
                  <td><%= vehicle.ano %></td>
                  <td class="actions-column">
                    <div class="btn-group" role="group">
                      <a href="/edit/<%= vehicle.id %>" class="btn btn-warning btn-sm">Editar</a>
                      <form action="/delete/<%= vehicle.id %>" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este veículo?')">Excluir</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-info" id="no-vehicles-alert">Nenhum veículo cadastrado.</div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Função para atualizar a lista de veículos
    function updateVehiclesList() {
      const spinner = document.getElementById('loading-spinner');
      const lastUpdate = document.getElementById('last-update');
      
      spinner.style.display = 'inline-block';
      
      fetch('/api/vehicles')
        .then(response => response.json())
        .then(vehicles => {
          spinner.style.display = 'none';
          lastUpdate.textContent = 'Atualizado: ' + new Date().toLocaleTimeString();
          
          const tbody = document.getElementById('vehicles-tbody');
          const noVehiclesAlert = document.getElementById('no-vehicles-alert');
          
          if (vehicles.length === 0) {
            if (!noVehiclesAlert) {
              const alert = document.createElement('div');
              alert.id = 'no-vehicles-alert';
              alert.className = 'alert alert-info';
              alert.textContent = 'Nenhum veículo cadastrado.';
              document.getElementById('vehicles-container').innerHTML = '';
              document.getElementById('vehicles-container').appendChild(alert);
            }
            return;
          }
          
          if (noVehiclesAlert) {
            noVehiclesAlert.remove();
          }
          
          tbody.innerHTML = '';
          vehicles.forEach(vehicle => {
            const row = document.createElement('tr');
            row.dataset.vehicleId = vehicle.id;
            row.innerHTML = `
              <td>${vehicle.id}</td>
              <td>${vehicle.placa}</td>
              <td>${vehicle.chassi}</td>
              <td>${vehicle.renavam}</td>
              <td>${vehicle.modelo}</td>
              <td>${vehicle.marca}</td>
              <td>${vehicle.ano}</td>
              <td class="actions-column">
                <div class="btn-group" role="group">
                  <a href="/edit/${vehicle.id}" class="btn btn-warning btn-sm">Editar</a>
                  <form action="/delete/${vehicle.id}" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este veículo?')">Excluir</button>
                  </form>
                </div>
              </td>
            `;
            tbody.appendChild(row);
          });
        })
        .catch(error => {
          console.error('Erro ao atualizar lista:', error);
          spinner.style.display = 'none';
        });
    }

    setInterval(updateVehiclesList, 3000);
    
    document.addEventListener('DOMContentLoaded', function() {
      updateVehiclesList();
    });
  </script>
</body>
</html>